<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jmsoft.ultranagocio"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.ultraNegocioTheme" >
                
        <activity
            android:name="com.jmsoft.ultranegocio.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.jmsoft.ultranegocio.SignInActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.jmsoft.ultranegocio.AnouncementActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.jmsoft.ultranegocio.AddAnnouncementActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
